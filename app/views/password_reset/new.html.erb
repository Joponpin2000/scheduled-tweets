<h1>Reset your Password</h1>

<%= form_with url: password_reset_path do |form| %>
<div class="mb-3">
  <%= form.label :email %>
  <%= form.text_field :email,required: true,
 class: "form-control" %>
</div>

<div class="mb-3">
  <%= form.submit "Reset Password", class: "btn btn-outline-primary" %>
</div>

<% end %>
